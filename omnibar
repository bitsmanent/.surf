#!/bin/bash

HISTORY=~/.surf/history
DMENULINES=15

hist() {
	[ -z "$1" ] && return

	local -r u="$1"
	local -r q="$(echo "$q" |sed 's,\([/]\),\\\1,g')"
	n="$(sed -n "s/^\([0-9]*\) ${q}$/\1/p" "$HISTORY")"

	if [ -z "$n" ]; then
		echo "1 ${q}" >> "$HISTORY"
	else
		n="$(echo $n+1|bc)"
		sed -i "s/^\([0-9]*\) ${q}$/${n} ${q}/" "$HISTORY"
	fi
}

prompt() {
	local -r nl="$1"
	cat "$HISTORY" |sort -rn | cut -d' ' -f2- | dmenu -i -l "$nl"
}

geturi() {
	local -r q="$1"
	local -r host="$(echo "$q" | sed 's,^\(.*://\|\)\([^/]*\).*,\2,')"
	local -r search="$(host -4t A "$host" |grep -q "has address"; echo $?)"
	local uri

	if [ "$search" -ne 0 ]; then
		# enjoy !bangs
		uri="https://duckduckgo.com/?q="
		uri+="$(urlencode "$q")"
	else
		uri="$q"
	fi
	echo $uri
}

goto() {
	local -r xid="$1"
	local -r prop="$2"
	local -r uri="$3"
	xprop -id "$xid" -f "$prop" 8s -set "$prop" "$uri"
}

urlencode() {
	printf %s "$1" | od -t x1 -An | tr -d '\n' | tr ' ' '%'
}

main() {
	local -r xid="$1"
	local -r prop="$2"
	local s u

	[ -z "$xid" -o -z "$prop" ] && exit 1

	s="$(prompt "$DMENULINES")"
	s="$(echo "$s" | sed 's/^[ ]*//;s/[ ]*$//')" # trim
	[ -z "$s" ] && exit 1

	hist "$s"
	u="$(geturi "$s")"

	goto "$xid" "$prop" "$u"
}

main "$@"
